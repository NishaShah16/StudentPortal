@model StudentPortal.web.Models.AddStudentViewModel
<h1>Add Student</h1>

<form method="post" onsubmit="return validateForm()">
    <div class="mt-3">
        <label class="form-label">Name</label>
        <input type="text" class="form-control" id="name" asp-for="Name"/>
        <span id="nameError" class="text-danger"></span>
    </div>
    
    <div class="mt-3">
        <label class="form-label">Email</label>
        <input type="email" class="form-control" id="email" asp-for="Email"/>
        <span id="emailError" class="text-danger"></span>
    </div>
    
    <div class="mt-3">
        <label class="form-label">Phone</label>
        <input type="text" class="form-control" id="phone" asp-for="Phone"/>
        <span id="phoneError" class="text-danger"></span>
    </div>
    
    <div class="mt-3">
        <label class="form-check-label" for="Subscribed">Subscribe</label>
        <input type="checkbox" class="form-check-input" id="subscribed" asp-for="Subscribed"/>
    </div>
    
    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>
<script src="~/js/javascript.js"></script>