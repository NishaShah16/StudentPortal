

@model StudentPortal.web.Models.Entities.Student
<h1>Edit Student</h1>
@if (Model is  null)
{
    <p>No student was found with this Id</p>
}
else 
{

    <form method="post">


        <div class="mt-3">
            <label class="form-lebal">Id</label>
            <input type="text" class="form-control" asp-for="Id" readonly />

        </div>
        <div class="mt-3">
            <label class="form-lebal">Name</label>
            <input type="text" class="form-control" asp-for="Name" />

        </div>
        <div class="mt-3">
            <label class="form-lebal">Email</label>
            <input type="email" class="form-control" asp-for="Email" />

        </div>
        <div class="mt-3">
            <label class="form-lebal">Phone</label>
            <input type="text" class="form-control" asp-for="Phone" />

        </div>
        <div class="mt-3">
            <label class="form-check-label" for="Subscribe">Subscribe</label>
            <input type="checkbox" class="form-control-input" id="Subscribed" asp-for="Subscribed" />

        </div>
        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Save</button>

            <button type="submit" class="btn btn-danger ms-3"
                    asp-action="Delete"
                    asp-controller="Student">
                Delete
            </button>

        </div>
    </form>
}

