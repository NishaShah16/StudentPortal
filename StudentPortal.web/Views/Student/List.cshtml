@{
}
@model  List<StudentPortal.web.Models.Entities.Student>
<h1>Students</h1>

<table class = "table">
    <thread>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Email</th>
            <th>Phone No.</th>
            <th>Subscribe</th>
            <th></th>
        </tr>
    </thread>
    <tbody>
        @foreach(var Student in Model)
        {
         <tr>
                <td>@Student.Id</td>
                <td>@Student.Name</td>
                <td>@Student.Email</td>
                <td>@Student.Phone</td>
                <td>@Student.Subscribed</td>
                <td>
                    <a class="btn btn-primary" asp-controller="Student" asp-action="Edit" asp-route-id="@Student.Id">Edit</a>
                    
                </td>
         </tr>   
        }
    </tbody>

</table>
